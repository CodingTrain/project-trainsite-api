{
  "name": "project-trainsite-api",
  "version": "0.1.0",
  "description": "This is the official API for everything related to The Coding Train.",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "test": "jest",
    "lint": "npm run prettier -- -l && npm run tslint",
    "format": "npm run prettier -- --write",
    "fix": "npm run format && npm run tslint -- --fix",
    "prettier": "prettier \"{src,test}/**/*\"",
    "tslint": "tslint -p tsconfig.json -t stylish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "{src,test}/**/*": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.ts": [
        "npm run tslint"
      ]
    }
  },
  "author": {
    "name": "The Coding Train",
    "url": "https://thecodingtrain.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodingTrain/project-trainsite-api.git"
  },
  "bugs": {
    "url": "https://github.com/CodingTrain/project-trainsite-api/issues"
  },
  "homepage": "https://github.com/CodingTrain/project-trainsite-api#readme",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "*",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "graphql-yoga": "^1.18.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.4"
  }
}
