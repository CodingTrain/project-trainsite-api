{
  "name": "project-trainsite-api",
  "version": "0.1.0",
  "description": "This is the official API for everything related to The Coding Train.",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "test": "jest",
    "lint": "npm run prettier -- -l && npm run tslint",
    "format": "npm run prettier -- --write",
    "fix": "npm run format && npm run tslint -- --fix",
    "prettier": "prettier \"{src,test}/**/*\"",
    "tslint": "tslint -p tsconfig.json -t stylish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "{src,test}/**/*": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.ts": [
        "npm run tslint"
      ]
    }
  },
  "author": {
    "name": "The Coding Train",
    "url": "https://thecodingtrain.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodingTrain/project-trainsite-api.git"
  },
  "bugs": {
    "url": "https://github.com/CodingTrain/project-trainsite-api/issues"
  },
  "homepage": "https://github.com/CodingTrain/project-trainsite-api#readme",
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {}
}
